{% extends 'rango/base.html' %}

{% block body_block %}
<div class="hero-unit">
        <h1>Add a Category</h1>
        <br/>
        <div class="container">
        {% if category_name_url %}
            <div style="color: red;">The specified category does not exist!</div>
        {% else %}
            <form class="span6" id="category_form" method="post" action="/rango/add_category/">

                {% csrf_token %}
                {% for hidden in form.hidden_fields %}
                    {{ hidden }}
                {% endfor %}

                {% for field in form.visible_fields %}
                    {{ field.errors }}
                    {{ field.help_text }}
                    {{ field }}
                {% endfor %}
                <br/>
                <button class="btn btn-primary" type="submit" name="submit">Create Category</button>
            </form>
            {% endif %}
            </div>
        </div>
</div>
    {% endblock %}
